<div class="container text-center">
   <div class="row">
      <div class="col-md-4">
         <img class="img-thumbnail" src="{{staff.Image}}" width="350" height="350">
      </div>
      <div class="col-md-6">
         <table class="table table-bordered text-center mt-4">
            <tr>
               <th colspan="2" class="text text-bg-success">STAFF INFO</th>
            </tr>
            <tr>
               <th>Name</th>
               <th>{{staff.Name}}</th>
            </tr>
            <tr>
               <th>Email</th>
               <th>{{staff.Email}}</th>
            </tr>
            <tr>
               <th>Gender</th>
               <th>{{staff.Gender}}</th>
            </tr>
            <tr>
               <th>Birthday</th>
               <th>{{dateFormat staff.Date "DD/MM/YYYY"}}</th>
            </tr>
         </table>
      </div>
   </div>
</div>
<style>
   table{
      background-image: linear-gradient(#FFEFBA,#FFFFFF);
   }
</style>