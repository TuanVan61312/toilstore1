<div class="container text-center">
   <div class="row">
      <div class="col-md-4">
         <img class="img-thumbnail" src="{{product.Image}}" width="350" height="350">
      </div>
      <div class="col-md-6">
         <table class="table table-bordered text-center mt-4">
            <tr>
               <th colspan="2" class="text text-bg-success">PRODUCT INFO</th>
            </tr>
            <tr>
               <th>Name</th>
               <th>{{product.Name}}</th>
            </tr>
            <tr>
               <th>Size</th>
               <th>{{product.Size}}</th>
            </tr>
            <tr>
               <th>Image</th>
               <th>{{product.Image}}</th>
            </tr>
            <tr>
               <th>Price</th>
               <th>{{product.Price}}</th>
            </tr>
            <tr>
               <th>Suplier</th>
               <th>{{product.Suplier}}</th>
            </tr>
            <tr>
               <th>Status</th>
               <th>{{product.Status}}</th>
            </tr>
         </table>
      </div>
       <a class="btn btn-primary" href="#" role="button">Add To Cart</a>
   </div>
</div>