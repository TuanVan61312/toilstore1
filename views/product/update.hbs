<div class="container col-md-8 mt-5">
   <form action="/product/edit/{{product._id}}" method="post" class="card p-3 bg-light text-center">
      <h2 class="text text-primary">Edit product</h2>
      <div class="form-group">
         <label class="text-success h6">product Name</label>
         <input class="form-control" type="text" name="Name" value="{{product.Name}}" required minlength="3"
            maxlength="20">
      </div>
      <div class="form-group mt-3">
         <label class="text-success h6">Product Size</label>
         <input class="form-control" type="number" name="Size" value="{{product.Size}}" required minlength="3"
            maxlength="20">
      </div>
      
      <div class="form-group mt-3">
         <label class="text-success h6">Product Image</label><br>
         <img src="{{productt.Image}}" width="100" height="100">
         <input class="form-control mt-3" type="text" name="Image" value="{{product.Image}}" required>
      </div>
      <div class="form-group mt-3">
         <label class="text-success h6">Product Price</label>
         <input class="form-control" type="number" name="Price" value="{{product.Size}}" required min="1", max="3">
      </div>
      
      <div class="form-group mt-3">
         <label class="text-success h6">Status</label>
         <br>
         
         {{#equal product.Status "Stocking"}}
         Stocking <input type="radio" name="Status" value="Stocking" checked>
         Sold out <input type="radio" name="Status" value="Sold out">
         {{/equal}}
         {{#equal product.Status "Sold out"}}
         Stocking <input type="radio" name="Status" value="Stocking">
         Sold out <input type="radio" name="Status" value="Sold out" checked>
         {{/equal}}
      </div>
      <div class="form-group mt-3">
         <input class="btn btn-primary mt-3" type="submit" value="Edit">
      </div>
   </form>
</div>