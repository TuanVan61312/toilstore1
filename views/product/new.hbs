<div class="container col-md-8 mt-5">
   <form action="/product/add" method="post" class="card p-3 bg-light text-center">
      <h2 class="text text-primary">Add new Product</h2>
      <div class="form-group">
         <label class="text-success h6">Product Name</label>
         <input class="form-control" type="text" name="Name" required minlength="3" maxlength="20">
      </div>
      <div class="form-group mt-3">
         <label class="text-success h6">Product Size</label>
         <input class="form-control" type="number" name="Size" required min="1", max="3">
      </div>
      <div class="form-group mt-3">
         <label class="text-success h6">Product Image</label>
         <input class="form-control" type="text" name="Image" required>
      </div>
      <div class="form-group mt-3">
         <label class="text-success h6">Price</label>
         <input class="form-control" type="number" name="Price" required>
      </div>
      <div class="form-group mt-3">
         <label class="text-success h6">Suplier</label>
         <input class="form-control" type="text" name="Suplier" required min=0 max=10>
      </div>
      <div class="form-group mt-3">
         <label class="text-success h6">Status</label><br>
         Stocking <input type="radio" name="Status" value="Stocking">
         Sold out <input type="radio" name="Status" value="Sold out">
      </div>
      <div class="form-group mt-3">
         <label class="text-success h6">Colors</label>
         <select name="Color" class="form-control">
            <option value="">Select a color</option>
            <option value="Black">Black</option>
            <option value="White">White</option>
            <option value="Green">Green</option>
            <option value="Red">Red</option>
         </select>
      </div>
      <div class="form-group mt-3">
         <input class="btn btn-primary mt-3" type="submit" value="Add">
      </div>
   </form>
</div>
<br>