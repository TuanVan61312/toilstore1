<div class="container col-md-8 mt-5">
   <form action="/suplier/edit/{{suplier._id}}" method="post" class="card p-3 bg-light text-center">
      <h2 class="text text-primary">Edit suplier</h2>
      <div class="form-group">
         <label class="text-success h6">Suplier Name</label>
         <input class="form-control" type="text" name="Name" value="{{suplier.Name}}" required minlength="3"
            maxlength="20">
      </div>
      <div class="form-group mt-3">
         <label class="text-success h6">Suplier Address</label>
         <input class="form-control" type="text" name="Address" value="{{suplier.Address}}" required minlength="3" maxlength="20">
      </div>
      <div class="form-group mt-3">
         <label class="text-success h6">Suplier Email</label>
         <input class="form-control" type="email" name="Email" value="{{suplier.Email}}" required minlength="3"
            maxlength="20">
      </div>
      <div class="form-group mt-3">
         <label class="text-success h6">Suplier Contact</label>
         <input class="form-control" type="text" name="Contact" value="{{suplier.Contact}}" required minlength="3"
            maxlength="20">
      </div>
      <div class="form-group mt-3">
         <input class="btn btn-primary mt-3" type="submit" value="Edit">
      </div>
   </form>
</div>